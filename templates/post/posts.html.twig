{% extends "base.html.twig" %}

{% block title %}Posts{% endblock %}

{% block content %}
    <section class="intro">
        <h1 class="intro-title">POSTS</h1>
        <h2 class="intro-desc">Retrouvez tous les posts sur cette page</h2>
    </section>
    <section class="posts-container">
        {% for post in posts %}
            <a class="post-item-link" href="/blog/posts/{{ post.id }}">
                <div class="post-item">
                    <h3 class="post-title">{{ post.title }}</h3>
                    <p class="post-chapo">{{ post.chapo }}</p>
                    <img class="post-image" src="/blog/{{ post.image }}" alt="{{ post.image }}"/>
                </div>
            </a>
        {% endfor %}
    </section>
    
{% endblock %}