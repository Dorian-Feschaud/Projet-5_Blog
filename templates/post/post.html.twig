{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <section class="single-post-container">
        <h1 class="single-post-title">{{ post.title }}</h1>
        <p class="single-post-chapo">{{ post.chapo }}</p>
        <img class="single-post-image" src="/blog/{{ post.image }}" alt="{{ post.image }}"/>
        <div class="single-post-infos">
            <p>{{ author.lastname }} {{ author.firstname }}</p>
            <p>{{ post.updatedAt|date('d-m-Y') }}</p>
        </div>
        <p class="single-post-content">{{ post.content }}</p>
        <div class="single-post-options">
            <a href="/blog/posts/{{ post.id }}/comments/new">Ajouter un commentaire</a>
            {% if post.idUser == current_user_id or user_is_admin %}
                <a href="/blog/posts/{{ post.id }}/edit">Modifier le post</a>
                <a href="/blog/posts/{{ post.id }}/comments/admin">Administration des commentaires</a>
                <a class="delete-post" href="/blog/posts/{{ post.id }}/delete">Supprimer le post</a>
            {% endif %}
        </div>
        <p class="comments-title">Commentaires :</p>
        {% if comments|length > 0 %}
            <div class="comments-container">
            {% for i in 0..comments|length - 1 %}
                <div class="comment-item">
                    <div class="comment-user">
                        <img class="comment-user-image" src="/blog/{{ comments_authors[i].image }}" alt="user-image"/>
                        <p class="comment-user-name">{{ comments_authors[i].lastname }} {{comments_authors[i].firstname }}</p>
                    </div>
                    <p>{{ comments[i].message }}</p>
                    <p class="comment-date">{{ comments[i].createdAt|date('d-m-Y') }}</p>
                </div>
            {% endfor %}
            </div>
        {% else %}
            <p>Aucun commentaire</p>
        {% endif %}
    </section>
{% endblock %}