{% extends 'base.html.twig' %}

{% block title %}Modification d'un utilisateur{% endblock %}

{% block content %}

    <section class="intro">
        <h1 class="intro-title">Modification d'un utilisateur</h1>
    </section>
    <seciton class="secondary">
    <form action="/blog/users/{{ id }}/edit" method="POST" enctype="multipart/form-data">
            <div class="form-item">
                <label for="firstname">Pr√©nom</label>
                <input type="text" id="firstname" name="firstname" value="{{ firstname }}"/>
            </div>
            <div class="form-item">
                <label for="lastname">Nom</label>
                <input type="text" id="lastname" name="lastname" value="{{ lastname }}"/>
            </div>
            <div class="form-item">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" value="{{ email }}"/>
            </div>
            <div class="file-input">
                <div class="form-item">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" value="{{ image }}" accept="image/png, image/jpeg"/>
                </div>
                <img class="edit-form-init-img" src="/blog/{{ image }}" alt="user-image"/>
            </div>
            <div class="form-item">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" value="{{ password }}"/>
            </div>
            <input type="submit"/>
        </form>
    </section>

{% endblock %}