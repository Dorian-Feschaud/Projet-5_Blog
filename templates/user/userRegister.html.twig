{% extends 'base.html.twig' %}

{% block title %}Création d'un compte{% endblock %}
{% block content %}
   <section class="intro">
        <h1 class="intro-title">Création d'un compte</h1>
        <h2 class="intro-desc">Remplissez ce formulaire pour créér votre compte</h2>
    </section>
    <section class="secondary">
      <form action="/blog/register" method="POST" enctype="multipart/form-data">
         <div class="form-item">
            <label for="lastname">Nom</label>
            <input type="text" id="lastname" name="lastname"/>
         </div>
         <div class="form-item">
            <label for="firstname">Prénom</label>
            <input type="text" id="firstname" name="firstname"/>
         </div>
         <div class="form-item">
            <label for="email">Email</label>
            <input type="text" id="email" name="email"/>
         </div>
         <div class="form-item">
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png, image/jpeg"/>
         </div>
         <div class="form-item">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password"/>
         </div>
            <input type="submit"/>
         </div>
      </form>
    </section>
{% endblock %}